<% if @post.errors.any? %>
  <section id="errors" >
    <h2> <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved: </h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
<div id="postform">
<%= form_for @post, html: {multipart: true} do |f| %>
  <%= f.label :description %></span></br>
  <%= f.text_area :description %></span></br></br>
  <%= f.label :tag_names, 'Tags' %></span> </br>
  <%= f.text_field :tag_names %></span></br></br>
  <%= f.file_field :image %></span>
  </br>
  <span id="image-submit"><%= f.submit %></span>
<% end %>
</div>
